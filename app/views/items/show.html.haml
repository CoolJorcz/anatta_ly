%h2 Item listing
%h3= @item.name

%h4= link_to "Edit", edit_item_path(@item.id)
%h4= link_to "Delete", item_path(@item.id), method: :delete, confirm: "Are you sure you want to delete " + @item.name + "?"
%p
  description:
  = @item.description

- if @item.color != ""
  %p
    color:
    = @item.color

- if @item.size != ""
  %p
    size:
    = @item.size
