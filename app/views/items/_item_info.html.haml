%h1= @item.name

%h3
  = link_to image_tag(profile_picture_path(@item.user)), user_path(@item.user)
  = link_to @item.user.name, user_path(@item.user)

%h5= "Category: " + @item.category.name

= image_tag @item.image.url(:medium), class: "img-polaroid holy"

%p= @item.description

- if @item.color != ""
  %p= "Color: " + @item.color

- if @item.size != ""
  %p= "Size: " + @item.size
