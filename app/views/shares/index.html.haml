%h2 My Shares
%h4 SHARE requests
%ul
  - @share_requests.each do |share|
    %li
      = link_to share.item.name, item_path(share.item.id)
      %ul
        %li= "requester: " + share.borrower.name
        %li= "from: " + share.start_on.to_s + " to " + share.end_on.to_s
        %li= "APPROVE"

