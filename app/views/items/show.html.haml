%h2 Item listing
%h3= @item.name
- if current_user == @user
  %h4= link_to "Edit", edit_item_path(@item.id)
  %h4= link_to "Delete", item_path(@item.id), method: :delete, confirm: "Are you sure you want to delete " + @item.name + "?"

%p
  description:
  = @item.description

- if @item.color != ""
  %p
    color:
    = @item.color

- if @item.size != ""
  %p
    size:
    = @item.size

- if @item.image != nil
  =image_tag @item.image.url(:medium)
  =image_tag @item.image.url(:thumb)

- if current_user != @user
  %h4
    Hey,
    = @user.name
    , can I borrow that
    = @item.name
    ?

