- if (current_user == @user) || is_friend?(@user)
  - if current_user == @user
    = render partial: "user_profile"

  - else
    = render partial: "friend_profile"

  %h4= "Total karma points:"
  - if current_user == @user
    = link_to "Add a new item", new_item_path(@user)

  %p Collection:
  %ul
    - @items.each do |item|
      %li
        - if item.image_file_name != nil
          = link_to image_tag(item.image.url(:small)), item_path(item.id)
        = link_to item.name, item_path(item.id)

- else
  = render partial: "non_friend_profile"
