%h1= @item.name

%h3
  = link_to image_tag(profile_picture_path(@item.user)), user_path(@item.user)
  = @item.user.name

%h5= @item.category.name

= image_tag @item.image.url(:medium)

%p= @item.description

- if @item.color != ""
  %p= "color: " + @item.color

- if @item.size != ""
  %p= "size: " + @item.size
